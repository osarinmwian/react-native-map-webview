{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "types": ["react", "react-native", "react-native-webview"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
